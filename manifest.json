{
  "manifest_version": 3,
  "name": "Marketplace Activity Analyzer",
  "version": "1.0.0",
  "description": "Browser extension for analyzing marketplace activity (Avito, Yandex Market, etc.)",
  "icons": {
    "16": "icons/icon.svg",
    "48": "icons/icon.svg",
    "128": "icons/icon.svg"
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://avito.ru/*",
    "https://market.yandex.ru/*",
    "https://ozon.ru/*",
    "https://aliexpress.com/*",
    "https://*.aliexpress.com/*",
    "https://ebay.com/*",
    "https://*.ebay.com/*"
  ],
  "background": {
    "service_worker": "src/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://avito.ru/*",
        "https://market.yandex.ru/*",
        "https://ozon.ru/*",
        "https://aliexpress.com/*",
        "https://*.aliexpress.com/*",
        "https://ebay.com/*",
        "https://*.ebay.com/*"
      ],
      "js": ["src/content.js"]
    }
  ],
  "action": {
    "default_popup": "src/popup.html",
    "default_title": "Marketplace Activity Analyzer"
  }
}
